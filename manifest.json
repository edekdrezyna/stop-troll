{
  "manifest_version": 2,
  "name": "Stop Troll",
  "version": "0.1.0",
  "icons": { "128": "images/128.png"},
  "description": "Wtyczka do oznaczania propagandy na serwisach społecznościowych",
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "downloads"
  ],
  "web_accessible_resources": [
    "button.css"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "css": ["button.css"],
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ]
}